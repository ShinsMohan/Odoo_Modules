<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="hr_dashboard.KpiCard" owl="1">
        <div class="col-lg-3 m-0 p-0">
            <div class="shadow-sm border m-2 p-4 bg-white text-center cursor-pointer" t-on-click="()=>props.onClick()">
                <div class="h1 fw-bold text-dark" style="font-size:48px"><span t-esc="props.value"/></div>
                <div class="h3 text-muted"><span t-esc="props.name"/></div>
            </div>
        </div>
    </t>

    <t t-name="hr_dashboard.KpiCardLarge" owl="1">
        <div class="col-lg-12 m-0 p-0">
            <div class="shadow-sm border m-2 p-4 bg-white text-center cursor-pointer">
                <div class="h1 fw-bold text-dark" style="font-size:48px"><span t-esc="props.value"/></div>
                <div class="h3 text-muted"><span t-esc="props.name"/></div>
            </div>
        </div>
    </t>

    <t t-name="hr_dashboard.KpiCardMedium" owl="1">
        <div class="col-lg-6 m-0 p-0">
            <div class="shadow-sm border m-2 p-4 bg-white text-center cursor-pointer" t-on-click="()=>props.onClick()">
                <div class="h1 fw-bold text-dark" style="font-size:48px"><span t-esc="props.value"/></div>
                <div class="h3 text-muted"><span t-esc="props.name"/></div>
            </div>
        </div>
    </t>
</templates>